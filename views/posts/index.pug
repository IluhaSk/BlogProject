extends ../layouts/app.pug

block content
	div(class='row')
		each post in posts
				div(class='col-sm-4')
					div(class='card', class ='m-1', class='bg-light')
						div(class='card-body')
							h5(class='card-title ') #{post.title}
							p(class='card-text') #{post.body}	
							div(class='row mx-auto')
								a( class ='btn btn-dark m-1 ', href =`/posts/${post.id}`) Open
								a( class ='btn btn-dark m-1 ', href =`/posts/${post.id}/edit`) Edit
								form(action=`/posts/${post.id}/?_method=DELETE`, method = 'post')
									button(class ='btn btn-dark m-1 ', type='submit') Delete